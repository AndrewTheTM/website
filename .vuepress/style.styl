$sideBlue = #5f86b0;
$pageColor = #eeeeeb;
$accentColor = #a243a8;

body,html
  background-color: $pageColor
  font-family: Raleway,serif

html.home
  background-color: $sideBlue

.navbar
  height: 4.5rem
  box-shadow: 0px 0px 6px rgba(0,0,0,0.4)
  background-color: white

  .site-name
    background: url(/tfr-logo.png) left no-repeat
    color: #00000000
    padding-left:275px
    padding-top: 15px

  .links
    padding-top: 5px

.header
    height: 200px

.home
  padding: 0 0
  width: 100%
  max-width: none

  .hero img
    object-fit: none
    object-position: center
    height: 250px
    width: 100%
    margin: 0

  .features
    padding: 2rem 2rem
    margin: 0 auto
    max-width: 940px

  .features h2
    font-weight: bold
    text-align: center
    text-decoration: underline

  .footer
    background-color: $sideBlue
    color: #ddc

  .content.custom
      max-width: 960px
      margin: auto


.page
  .content
    padding-top: 50px
    max-width: 900px
    text-align: justify

  .content h1,h2,h3
    color: #448

  .content h2
    border-bottom: solid 1px #aac

.page-edit
    border-top: solid 1px #ccc
    padding: 0.5rem 0rem

.sidebar
  background-color: $sideBlue
  padding-top: 20px

  .sidebar-heading
    color: white
    font-weight: normal

  .sidebar-heading.open
    color: white

  .sidebar-link
    color: #eed
  .sidebar-link.active
    color: #ff4
    border-left-color: #ff4
  a.sidebar-link:hover
    color: #ff4

@media (max-width: 1000px)
  .home
    .features
      margin: 2rem
    .content.custom
      margin: 2rem


@media (max-width: 500px)
  .navbar
    .site-name
      color: $accentColor
      background: url(/tiny-logo.png) left no-repeat
      padding-left: 50px
      padding-top: 10px

@media (max-width: 1500px)
  .page
    .content
      max-width: 780px

