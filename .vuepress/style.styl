body,html
    background-color: #eeeeea
    font-family: Lato,Raleway,serif

.navbar
  height: 4.5rem
  box-shadow: 0px 0px 6px rgba(0,0,0,0.4)
  background-color: white

  .site-name
    background: url(/tfr-logo.png) left no-repeat
    color: #00000000
    padding-left:275px
    padding-top: 15px

  .links
    padding-top: 5px

.header
    height: 200px

.home
  padding: 0
  padding-left: 0
  margin-left: 0
  width: 100%
  max-width: none

  .hero img
    object-fit: none
    object-position: center
    height: 250px
    width: 100%
    margin: 0

  .features
    max-width: 960px
    padding: 2rem 0
    margin: auto

  .features h2
    font-weight: bold
    text-align: center
    text-decoration: underline

  .content.custom
      max-width: 960px
      margin: auto

.page
  .content
    padding-top: 50px
    max-width: 900px

.page-edit
    border-top: solid 1px #ccc
    padding: 0.5rem 2rem

.sidebar
  background-color: #5f86b0
  padding-top: 20px

  .sidebar-heading
    color: white
    font-weight: normal

  .sidebar-heading.open
    color: white

  .sidebar-link
    color: #eed
  .sidebar-link.active
    color: #ff4
    border-left-color: #ff4
  a.sidebar-link:hover
    color: #ff4

@media (max-width: 1000px)
  .home
    .features
      margin: 2rem
    .content.custom
      margin: 2rem


@media (max-width: 500px)
  .navbar
    .site-name
      color: #2b8
      background: url(/tiny-logo.png) left no-repeat
      padding-left: 50px
      padding-top: 10px

@media (max-width: 1500px)
  .page
    .content
      max-width: 780px

