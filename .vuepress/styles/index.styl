body,html
  background-color: $pageColor
  font-family: Roboto,sans-serif
  font-size: 18px

p
  line-height: 28px

ul, ol, li {
    line-height: 1.5;
    margin-top: 1rem;
}

h1,h2,h3,h4,h5,h6
  font-family: Oswald,sans-serif
  text-align: left

h1,h2,h3
  padding-top: 1rem

.custom-block
  text-align: left

.header
    height: 200px

.home
  padding: 3.1rem 0 0 0
  width: 100%
  max-width: none

  .hero h1,h2,p
    padding: 0 1rem
    text-align: center

  .hero img
    object-fit: none
    object-position: center
    width: 100%
    margin: 0

  .features
    padding: 2rem 2rem
    margin: 0 auto
    max-width: 940px
    border: 1px dotted $sideBlue

  .features h2
    font-weight: bold
    text-align: center
    text-decoration: underline

  .features
    font-size: 0.85rem

  .footer
    background-color: $sideBlue
    color: #ccb
    font-size: 0.85rem

  .content.custom
      max-width: 960px
      margin: auto

.page
  .tip,.warning,.danger
    box-shadow: 2px 3px 3px rgba(0,0,0,0.2)
    .custom-block-title
      color: black
  .tip
    background-color: #fff
  .warning
    background-color: #fe9


  .danger
    background-color: #faa;

  .theme-default-content
    padding-top: 1rem;
    margin-top: 0rem;

  .theme-default-content h1,h2,h3
    color: #448

  .theme-default-content h1
    background: url(/tfr-logo-very-tiny.png) bottom left no-repeat
    padding-top: 1rem;
    padding-left: 70px
    margin-left: -70px

  .theme-default-content h2
    border-bottom: solid 1px #aac

.page-edit
    padding: 4rem 40px 0rem 40px

.sidebar
  background-color: $sideBlue
  padding-top: 20px
  width: 16rem

.sidebar ul,ol,li
  margin-top: 0px;

.del,.ins{ display: inline-block; margin-left: 0.5ex; }
.del     { background-color: #fcc; }
      .ins{ background-color: #cfc; }

@media (max-width: 1500px)
  .page
    .content
      max-width: 900px

@media (max-width: 960px)
  .home
    .features
      margin: 2rem
    .content.custom
      margin: 2rem
    .hero h1,h2,p
      padding: 0 0.5rem
    .features
      .feature
        padding: 0rem 0rem

  .page
    .content h1
      background: none
      padding-top: 0px
      padding-left: 0px
      margin-left: 0px

  .page
    .content
      text-align: left

    .theme-default-content h1
      background: none
      padding-left: 0px
      margin-left: 0px

  .sidebar
      width: 16rem

@media (max-width: 500px)
  .page .theme-default-content h1
    background: none
