body,html
  background-color: $pageColor
  font-family: Raleway,Lato,serif
  font-size: 16px

p
  line-height: 24px

h1,h2,h3,h4,h5,h6
  text-align: left

.navbar
  height: 4.5rem
  box-shadow: 0px 0px 6px rgba(0,0,0,0.4)
  background-color: white

  .site-name
    background: url(/tfr-logo.png) left no-repeat
    color: #00000000
    padding-left:275px
    padding-top: 15px

  .links
    padding-top: 5px

.custom-block
  text-align: left

.header
    height: 200px

.home
  padding: 0 0
  width: 100%
  max-width: none

  .hero h1,h2,p
    padding: 0 1rem
    text-align: center

  .hero img
    object-fit: none
    object-position: center
    height: 250px
    width: 100%
    margin: 0

  .features
    padding: 2rem 2rem
    margin: 0 auto
    max-width: 940px
    border: 1px dotted $sideBlue

  .features h2
    font-weight: bold
    text-align: center
    text-decoration: underline

  .features
    font-size: 0.85rem

  .footer
    background-color: $sideBlue
    color: #ccb
    font-size: 0.85rem

  .content.custom
      max-width: 960px
      margin: auto

.page
  .tip,.warning,.danger
    box-shadow: 2px 3px 3px rgba(0,0,0,0.2)
    .custom-block-title
      color: black
  .tip
    background-color: #fff
  .warning
    background-color: #fe9


  .danger
    background-color: #faa;

  .theme-default-content
    padding-top: 1rem;
    margin-top: 0rem;

  .theme-default-content h1,h2,h3
    color: #448

  .theme-default-content h1
    background: url(/tiny-logo.png) left no-repeat
    padding-top: 1rem;
    padding-left: 60px
    margin-left: -60px

  .theme-default-content h2
    border-bottom: solid 1px #aac

.page-edit
    border-top: solid 1px #ccc
    padding: 0.5rem 40px

.sidebar
  background-color: $sideBlue
  padding-top: 50px
  width: 18rem

  .sidebar-heading
    color: white
    font-weight: normal

  .sidebar-heading.open
    color: white

  .sidebar-link
    color: #eed
  .sidebar-link.active
    color: #ff4
    border-left-color: #ff4
  a.sidebar-link:hover
    color: #ff4

.del,.ins{ display: inline-block; margin-left: 0.5ex; }
.del     { background-color: #fcc; }
      .ins{ background-color: #cfc; }

@media (max-width: 1500px)
  .page
    .content
      max-width: 900px

@media (max-width: 960px)
  .home
    .features
      margin: 2rem
    .content.custom
      margin: 2rem
    .hero h1,h2,p
      padding: 0 0.5rem
    .features
      .feature
        padding: 0rem 0rem

  .page
    .content h1
      background: none
      padding-top: 0px
      padding-left: 0px
      margin-left: 0px

  .page
    .content
      text-align: left
  .sidebar
      width: 16rem

@media (max-width: 500px)
  .navbar
    .site-name
      color: $accentColor
      background: none
      padding-left: 50px
      padding-top: 10px

